@section pageCss{
    <link href="~/Content/css/contact-page.css" rel="stylesheet" />
}

<div id="map_wrapper">
    <div id="map_canvas" class="mapping"></div>
</div>

<div id="contact-content" ng-controller="ContactController">
    <div class="container">
        <div class="row">

            <div class="col-md-8">

                <h4 class="classic-title"><span>Contact Us</span></h4>

                <div class="alert alert-danger alert-dismissable" ng-if="showServerErrors">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <div ng-bind-html="serverErrorMessage"></div>
                </div>

                <form role="form" class="contact-form" id="contact-form" name="contactForm" novalidate method="post" ng-submit="submitContactForm()">
                    <div validate-on-submit class="form-group" ng-class="{'has-error': contactForm.name.$invalid && contactForm.name.$touched}">
                        <div class="controls">
                            <input class="form-control" type="text" id="name" name="name" placeholder="Name" ng-model="contactData.name" ng-required="true">
                            <span class="help-block" ng-if="contactForm.name.$error.required">Name is required.</span>
                        </div>
                    </div>
                    <div validate-on-submit class="form-group" ng-class="{'has-error': contactForm.email.$invalid && contactForm.email.$touched}">
                        <div class="controls">
                            <input type="email" class="email form-control" placeholder="Email" id="email" name="email" ng-model="contactData.email" ng-required="true">
                            <span class="help-block" ng-if="contactForm.email.$error.required">Email is required.</span>
                            <span class="help-block" ng-if="!contactForm.email.$error.required && contactForm.email.$invalid">Type a valid Email.</span>
                        </div>
                    </div>
                    <div validate-on-submit class="form-group" ng-class="{'has-error': contactForm.subject.$invalid && contactForm.subject.$touched}">
                        <div class="controls">
                            <input type="text" class="requiredField form-control" placeholder="Subject" id="subject" name="subject" ng-model="contactData.subject" ng-required="true">
                            <span class="help-block" ng-if="contactForm.subject.$error.required">Subject is required.</span>
                        </div>
                    </div>

                    <div validate-on-submit class="form-group" ng-class="{'has-error': contactForm.message.$invalid && contactForm.message.$touched}">
                        <div class="controls">
                            <textarea class="form-control" rows="7" placeholder="Message" id="message" name="message" ng-model="contactData.message" ng-required="true"></textarea>
                            <span class="help-block" ng-if="contactForm.message.$error.required">A message is required.</span>
                        </div>
                    </div>
                    <button ladda="sendingContactMessage" type="submit" id="submit" class="btn btn-system btn-large">Send</button>
                </form>

            </div>

            <div class="col-md-4">
                <h4 class="classic-title"><span>Our Offices</span></h4>

                <h5 class="office-location-title">Luxembourg</h5>
                <ul class="icons-list">
                    <li><i class="fa fa-globe">  </i> <strong>Address:</strong> Rue Roger Wercollier, 15 - Hesperange</li>
                    <li><i class="fa fa-mobile"></i> <strong>Phone:</strong> +352 661 102 432</li>
                </ul>

                <div class="hr1" style="margin-bottom:10px;"></div>

                <h5 class="office-location-title">Belgium</h5>
                <ul class="icons-list">
                    <li><i class="fa fa-globe">  </i> <strong>Address:</strong> Boulevard de la Cambre, 74 - Bruxelles</li>
                    <li><i class="fa fa-mobile"></i> <strong>Phone:</strong> +32 476 360 653</li>
                </ul>

                <ul class="icons-list single-contact-email">
                    <li><i class="fa fa-envelope-o"></i> <strong>Email:</strong> info@akabi.eu</li>
                </ul>

                <div class="hr1" style="margin-bottom:15px;"></div>

                <h4 class="classic-title"><span>Working Hours</span></h4>

                <ul class="list-unstyled">
                    <li><strong>Monday - Friday</strong> - 9am to 6pm</li>
                    <li><strong>Saturday & Sunday</strong> - Closed</li>
                </ul>

            </div>

        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/google-maps-contact-page.js"></script>
}
